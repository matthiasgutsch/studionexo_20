{
  "version": 2,
  "name": "<app>",
  "public": true,
  "buildCommand": "npm ci && ng build --configuration production --ssr",
  "functions": {
    "api/index.js": {
      "runtime": "@vercel/node@3.0.0",
      "includeFiles": "dist/<app>/**"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/dist/<app>/browser/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ]
}